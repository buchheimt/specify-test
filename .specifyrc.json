{
  "repository": "@thirtymadison/base-theme",
  "head": "specify",
  "base": "main",
  "rules": [
    {
      "name": "Extract all tokens to JSON",
      "path": "specify_output",
      "parsers": [
        {
          "name": "convert-font",
          "options": {
            "formats": ["woff2", "woff"],
            "fileNameKey":  ["fontFamily", "fontWeight"],
            "fileNameFormat": "kebabCase"
          }
        },
        {
          "name": "omit",
          "options": {
            "keys": ["value.textAlign"]
          }
        },
        {
          "name": "replace-string",
          "options": {
            "keys": ["name"],
            "regex": {
              "pattern": "brand-accent-2",
              "flags": "g"
            },
            "replaceBy": "brand-bright",
            "trim": true
          }
        },
        {
          "name": "filter",
          "options": {
            "key": "name",
            "regex": {
              "pattern": "^(?!reference/color).*$"
            }
          }
        },
        {
          "name": "to-theme-ui",
          "options": {
            "variants": true,
            "formatConfig": {
              "module": "json"
            },
            "formatName": "kebabCase",
            "formatTokens": {
              "fontSizeFormat": {
                "type": "string",
                "unit": "rem"
              }
            }
          }
        }
      ]
    }
  ]
}
